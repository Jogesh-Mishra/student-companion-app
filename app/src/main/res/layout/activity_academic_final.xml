<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".academicFinal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBackReg"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_btn"
            android:drawableTop="@drawable/ic_content_paste_black_24dp"
            android:paddingTop="20dp"
            android:text="BACK PApER"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDocuments"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_btn"
            android:drawableTop="@drawable/ic_people_black_24dp"
            android:paddingTop="20dp"
            android:text="DOCUMENTS"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnIntern"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_btn"
            android:drawableTop="@drawable/ic_work_black_24dp"
            android:paddingTop="20dp"
            android:text="Internship"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMaterial"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_btn"
            android:drawableTop="@drawable/ic_tab_black_24dp"
            android:paddingTop="20dp"
            android:text="Material"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>